{
  "services": [
    {
      "name": "backend",
      "startCommand": "cd backend && npm start",
      "type": "web"
    },
    {
      "name": "worker",
      "startCommand": "cd worker && npm start",
      "type": "worker"
    },
    {
      "name": "frontend",
      "startCommand": "cd frontend && npm run build && npx next start -p 3000",
      "type": "web"
    }
  ]
}